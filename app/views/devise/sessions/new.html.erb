<h2>ログイン画面</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, placeholder:"info@test.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, placeholder:"password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"ログイン状態を保持する" %>
    </div>
  <% end %>

  <%= link_to "facebook", user_facebook_omniauth_authorize_path, method: :post  %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

