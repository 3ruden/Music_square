<section class="text-center py-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-9 col-lg-7 col-xl-5">
      <div class="card">
        <div class="card-body mx-4">
          <h3 class="dark-grey-text mb-5">サインアップ</h3>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="md-form">
              <%= f.label :"ユーザーネーム" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
            </div>

            <div class="md-form">
              <%= f.label :"メールアドレス" %><br />
              <%= f.email_field :email, placeholder:"info@test.com", autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>

            <div class="md-form">
              <%= f.label :"プロフィール" %><br />
              <%= f.text_area :profile, placeholder:"好きなアーティスト、ジャンルなどを書こう！", autofocus: true, autocomplete: "profile", class:"form-control mt-3 pl-1" %>
            </div>

            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupFileAddon01">アップロード</span>
              </div>
              <div class="custom-file">
                <%= f.label :"プロフィール画像", class:"custom-file-label text-left", for:"inputGroupFile01" %>
                <%= f.file_field :profile_image, autofocus: true, autocomplete: "profile_image", class:"custom-file-input", id:"inputGroupFile01" %>
                <%= image_tag(@user.profile_image.url) if @user.profile_image && @user.profile_image.url %>
              </div>
            </div>

            <div class="md-form">
              <%= f.label :"パスワード(6文字以上)" %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="md-form">
              <%= f.label :"パスワード(確認用)" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="text-center mb-3">
              <%= f.submit "サインアップ", class:"btn blue-gradient btn-block z-depth-1a submit-btn" %>
            </div>
          <% end %>

          <div class="modal-footer mx-5 pt-3 mb-1">
            <p class="font-small grey-text d-flex justify-content-end">アカウントをお持ちの方は
            <a href="users/sign_in" class="blue-text ml-1">ログイン画面へ</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
