<div id="favorite_btn_<%= board_comment.id %>">

<% unless board_comment.user == current_user %>
<% if current_user.already_favorite?(board_comment) %>
    <%= link_to 'いいね解除', favorite_path(id: board_comment.id), method: :delete, remote: true, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'いいね', favorites_path(id: board_comment.id), method: :post, remote: true, class: 'btn btn-primary' %>
  <% end %>
<% end %>
</div>
